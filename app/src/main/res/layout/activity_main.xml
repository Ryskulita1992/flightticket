    <ImageView
        android:id="@+id/icon"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/airplane"
        app:layout_constraintLeft_toLeftOf="@+id/lhr"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toTopOf="@id/firstLine"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/icon"
        android:background="@android:color/darker_gray"
        android:layout_marginHorizontal="128dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/jamie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JAMIE SYKE"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLIGHT"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@+id/jamie"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/va"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VA 301"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/flight"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:textSize="40sp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEAT"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@+id/jamie"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"/>


    <TextView
        android:id="@+id/a21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="21A"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/flight"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:textSize="40sp"
        android:layout_marginTop="5dp"

        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/a21"
        android:background="@android:color/darker_gray"
        android:layout_marginHorizontal="128dp"
        android:layout_marginTop="24dp"
        />
        />
